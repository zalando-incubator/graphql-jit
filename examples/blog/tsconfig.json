{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["esnext.asynciterable", "es2018"],
    "typeRoots": ["../../types", "../../node_modules/@types"]
  },
  "include": ["src/"]
}
